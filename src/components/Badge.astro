---
const { class: color } = Astro.props;

type BadgeColor = 'blue' | 'red' | 'yellow' | 'white' | 'green' | 'gray';

const colors: Record<BadgeColor, string> = {
	blue: 'bg-blue-100 text-blue-800 dark:text-blue-400 border-blue-400',
	red: 'bg-red-100 text-red-800 dark:text-red-400 border-red-400',
	yellow: 'bg-yellow-100 text-yellow-800 dark:text-yellow-400 border-yellow-400',
	white: 'bg-white text-gray-800 dark:text-white border-gray-300',
	green: 'bg-green-100 text-green-800 dark:text-green-400 border-green-400',
	gray: 'bg-gray-100 text-gray-800 dark:text-gray-400 border-gray-400',
};

const colorClasses = colors[color as BadgeColor] ?? colors.blue; // azul por defecto
---

<span
	class={`text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded-sm dark:bg-gray-700 border ${colorClasses}`}>
	<slot />
</span>



