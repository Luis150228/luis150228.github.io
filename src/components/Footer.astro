---
import Github from './icons/Github.astro';
import Linkedin from './icons/Linkedin.astro';
import RangelDev from './icons/RangelDev.astro';
---

<footer class='mt-auto w-full py-10 px-4 sm:px-6 lg:px-8'>
	<div class='w-full max-w-[70%] mx-auto text-center'>
		<!-- Marca -->
		<div>
			<a
				class='flex items-center justify-center gap-x-2 text-xl font-semibold text-black dark:text-white w-full'
				href='#'
				aria-label='Brand'>
				Rangel Dev
				<RangelDev class='w-6 h-auto' />
			</a>
		</div>

		<!-- Descripción -->
		<div class='mt-3'>
			<p class='text-black dark:text-white'>Astro + Tailwind + Flowbite</p>
			<p class='text-black dark:text-white'>© 2025 Rangel Diaz Luis Fernando.</p>
		</div>

		<!-- Social Brands -->
		<div class='mt-3 flex justify-center gap-2'>
			<a
				class='size-10 sm:size-12 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-full border border-transparent text-black dark:text-white hover:bg-red-100 dark:hover:bg-neutral-800 focus:outline-hidden focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none'
				href='https://github.com/Luis150228'
				target='_blank'
				rel='noopener noreferrer'>
				<Github class='size-5 sm:size-6' />
			</a>

			<a
				class='size-10 sm:size-12 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-full border border-transparent text-black dark:text-white hover:bg-blue-100 dark:hover:bg-neutral-800 focus:outline-hidden focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none'
				href='https://www.linkedin.com/in/luis-fernando-rangel-a70027161/'
				target='_blank'
				rel='noopener noreferrer'>
				<Linkedin class='size-5 sm:size-6' />
			</a>
		</div>
	</div>
</footer>
