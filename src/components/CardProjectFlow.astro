---
import Badge from './Badge.astro';

interface Props {
	title: string;
	description: string;
	image: string;
	link: string;
	tags?: string[];
}

const { title, description, image, link = '', tags = [] }: Props = Astro.props;
---

<div class='item'>
	<div class='max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700'>
		<img
			class='rounded-t-lg w-full h-93 object-cover'
			src={image}
			alt={title}
		/>
		<div class='p-5'>
			<h5 class='mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white'>{title}</h5>
			<p class='mb-3 text-sm font-normal text-gray-700 dark:text-gray-400'>{description}</p>
			<div class='flex flex-wrap gap-1 mb-3'>
				{tags.map((tag: string) => <Badge class='blue'>{tag}</Badge>)}
			</div>
			{
				link && (
					<a
						href={link}
						class='inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'>
						Visit website
					</a>
				)
			}
		</div>
	</div>
</div>
